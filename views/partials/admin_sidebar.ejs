<aside class="w-64 bg-indigo-900 text-white flex flex-col min-h-screen">
    <!-- Logo -->
    <div class="p-6 border-b border-indigo-800">
        <a href="/" class="text-xl font-bold">CardNoble</a>
        <p class="text-indigo-300 text-sm mt-1">Merchant Dashboard</p>
    </div>

    <!-- View Store Link -->
    <a href="/" target="_blank"
        class="flex items-center px-6 py-3 text-indigo-200 hover:bg-indigo-800 border-b border-indigo-800">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        View Store
    </a>

    <!-- Navigation -->
    <nav class="flex-1 overflow-y-auto py-4">
        <a href="/admin"
            class="flex items-center px-6 py-3 <%= path === '/admin' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Dashboard
        </a>

        <!-- Inventory -->
        <div x-data="{ open: true }" class="border-t border-indigo-800 mt-2">
            <button @click="open = !open"
                class="flex items-center justify-between w-full px-6 py-3 text-indigo-200 hover:bg-indigo-800">
                <span class="flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                    Inventory
                </span>
                <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': open }" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div x-show="open" class="bg-indigo-950">
                <a href="/admin/inventory?category=mtg"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">MTG</a>
                <a href="/admin/inventory?category=yugioh"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Yugi-oh</a>
                <a href="/admin/inventory?category=pokemon"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Pokemon</a>
                <a href="/admin/inventory?category=fab"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Flesh & Blood</a>
                <a href="/admin/inventory?category=onepiece"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">One Piece</a>
                <a href="/admin/inventory?category=lorcana"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Lorcana</a>
            </div>
        </div>

        <a href="/admin/orders"
            class="flex items-center px-6 py-3 <%= path && path.startsWith('/admin/orders') ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Orders
        </a>

        <!-- Manage Stocks -->
        <div x-data="{ open: false }">
            <button @click="open = !open"
                class="flex items-center justify-between w-full px-6 py-3 text-indigo-200 hover:bg-indigo-800">
                <span class="flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                    </svg>
                    Manage Stocks
                </span>
                <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': open }" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div x-show="open" class="bg-indigo-950">
                <a href="/admin/stock-in" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Stock-in
                    Orders</a>
                <a href="/admin/stock-out" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Stock-out
                    Orders</a>
            </div>
        </div>

        <a href="/admin/messages"
            class="flex items-center px-6 py-3 <%= path && path.startsWith('/admin/messages') ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
            Messages
        </a>

        <a href="/admin/wallet"
            class="flex items-center px-6 py-3 <%= path === '/admin/wallet' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
            Wallet
        </a>

        <a href="/admin/boxes"
            class="flex items-center px-6 py-3 <%= path === '/admin/boxes' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8" />
            </svg>
            Boxes
        </a>

        <a href="/admin/promotions"
            class="flex items-center px-6 py-3 <%= path === '/admin/promotions' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            Promotions
        </a>

        <a href="/admin/coupons"
            class="flex items-center px-6 py-3 <%= path === '/admin/coupons' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
            </svg>
            Coupons
        </a>

        <!-- CMS -->
        <div x-data="{ open: false }">
            <button @click="open = !open"
                class="flex items-center justify-between w-full px-6 py-3 text-indigo-200 hover:bg-indigo-800">
                <span class="flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                    </svg>
                    CMS
                </span>
                <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': open }" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div x-show="open" class="bg-indigo-950">
                <a href="/admin/cms/banners"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Banners</a>
                <a href="/admin/cms/thumbnails"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Thumbnails</a>
                <a href="/admin/cms/binders"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Binders</a>
                <a href="/admin/cms/games" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Games</a>
            </div>
        </div>

        <a href="/admin/testimonials"
            class="flex items-center px-6 py-3 <%= path === '/admin/testimonials' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Testimonials
        </a>

        <a href="/admin/tickets"
            class="flex items-center px-6 py-3 <%= path === '/admin/tickets' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
            Tickets
        </a>

        <a href="/admin/sales-report"
            class="flex items-center px-6 py-3 <%= path === '/admin/sales-report' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Sales Report
        </a>

        <!-- Settings -->
        <div x-data="{ open: false }">
            <button @click="open = !open"
                class="flex items-center justify-between w-full px-6 py-3 text-indigo-200 hover:bg-indigo-800">
                <span class="flex items-center">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Settings
                </span>
                <svg class="w-4 h-4 transition-transform" :class="{ 'rotate-180': open }" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div x-show="open" class="bg-indigo-950">
                <a href="/admin/settings" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Store
                    Details</a>
                <a href="/admin/settings/domain" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Store
                    Domain</a>
                <a href="/admin/settings/theme" class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Store
                    Theme</a>
                <a href="/admin/settings/order-status"
                    class="block px-12 py-2 text-sm text-indigo-300 hover:text-white">Order Status</a>
            </div>
        </div>
    </nav>
</aside>