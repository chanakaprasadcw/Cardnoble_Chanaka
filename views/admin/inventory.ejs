<%- include('../partials/admin_layout_start', { title: 'Inventory' }) %>
    <%- include('../partials/admin_header', { title: 'Inventory' }) %>

        <div class="space-y-6">
            <div class="flex items-center justify-between">
                <h1 class="text-3xl font-bold text-gray-900">Inventory</h1>
                <a href="/admin/add-product"
                    class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                    + Add Product
                </a>
            </div>

            <!-- Filters -->
            <div class="bg-white rounded-xl shadow-sm p-4">
                <form method="GET" class="flex gap-4">
                    <select name="category"
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                        <option value="">All Categories</option>
                        <% categories.forEach(cat=> { %>
                            <option value="<%= cat.slug %>" <%=category===cat.slug ? 'selected' : '' %>><%= cat.name %>
                            </option>
                            <% }); %>
                    </select>
                    <input type="text" name="q" value="<%= search %>" placeholder="Search products..."
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                    <button type="submit"
                        class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition">Filter</button>
                </form>
            </div>

            <!-- Products Table -->
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Set</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stock</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price (Min)</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% if (products.length> 0) { %>
                            <% products.forEach(product=> { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <img src="<%= product.imageUrl || '/static/images/card-back.jpg' %>" alt=""
                                                class="w-12 h-16 object-contain mr-4 rounded bg-gray-100">
                                            <div>
                                                <p class="font-medium text-gray-900">
                                                    <%= product.name %>
                                                </p>
                                                <p class="text-sm text-gray-500">
                                                    <%= product.rarity || '-' %>
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-gray-600">
                                        <%= product.setName || '-' %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <% const totalQty=product.stocks ? product.stocks.reduce((sum, s)=> sum +
                                            s.quantity, 0) : 0; %>
                                            <span class="<%= totalQty > 0 ? 'text-green-600' : 'text-red-600' %>">
                                                <%= totalQty %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4 text-gray-900">
                                        <% const minPrice=product.stocks && product.stocks.length> 0 ?
                                            Math.min(...product.stocks.map(s => s.price)) : 0; %>
                                            $<%= minPrice.toFixed(2) %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <a href="/admin/edit-product/<%= product.id %>"
                                            class="text-indigo-600 hover:underline">Edit</a>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                                No products found. <a href="/admin/add-product"
                                                    class="text-indigo-600 hover:underline">Add your first product</a>
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>

                <% if (pages> 1) { %>
                    <div class="px-6 py-4 border-t bg-gray-50 flex justify-center gap-2">
                        <% for(let i=1; i <=pages; i++) { %>
                            <a href="/admin/inventory?page=<%= i %>&category=<%= category || '' %>&q=<%= search || '' %>"
                                class="px-3 py-1 rounded <%= i === page ? 'bg-indigo-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100' %>">
                                <%= i %>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
            </div>
        </div>

        <%- include('../partials/admin_layout_end') %>